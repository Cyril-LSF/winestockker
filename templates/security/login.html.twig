{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Connexion{% endblock %}

{% block body %}
<main>
    <div class="container">

      <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
          <div class="row justify-content-center">
            <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

              <div class="d-flex justify-content-center py-4">
                <a href="index.html" class="logo d-flex align-items-center w-auto">
                  <img src={{ asset('images/logo_ws.png') }} alt="Logo">
                  <span class="d-none d-lg-block">Wine Stockker</span>
                </a>
              </div><!-- End Logo -->

              <div class="card mb-3">

                <div class="card-body">

                  <div class="pt-4 pb-2">
                    <h5 class="card-title text-center pb-0 fs-4">Connectez-vous à votre compte</h5>
                    <p class="text-center small">Entrez votre email & votre mot de passe</p>
                  </div>

                  <form class="row g-3 needs-validation"method="post">
                    {% if error %}
                      <div class="alert alert-danger">Email ou mot de passe incorrect.</div>
                    {% endif %}
                    <div class="col-12">
                      <label for="inputEmail" class="form-label">Adresse email</label>
                      <div class="input-group has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">@</span>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Ex: john@doe.fr" autocomplete="email" required>
                        <div></div>
                      </div>
                    </div>

                    <div class="col-12">
                      <label for="inputPassword" class="form-label">Mot de passe</label>
                      <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                    </div>

                    <input type="hidden" name="_csrf_token"
                      value="{{ csrf_token('authenticate') }}"
                    >

                    {# <div class="col-12">
                      <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                        <label class="form-check-label" for="rememberMe">Remember me</label>
                      </div>
                    </div> #}
                    <a class="small link-purple" href={{ path('app_forgot_password_request') }}>Mot de passe oublié ?</a>
                    <div class="col-12">
                      <button class="btn btn-purple w-100" type="submit">Connexion</button>
                    </div>
                    <div class="col-12">
                      <p class="small mb-0">Pas encore de compte ? <a href={{ path('register') }} class="link-purple">S'inscrire ici</a></p>
                    </div>
                  </form>

                </div>
              </div>

            </div>
          </div>
        </div>

      </section>

    </div>
  </main><!-- End #main -->

{% endblock %}
