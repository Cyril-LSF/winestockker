                                        {% endfor %}
                                        <p class="password-error mb-4 ms-5"></p>
                                    </div>
                                    <div class="form-outline mb-4 h5 w-100">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                                            {{ form_widget(form.password.second) }}
