{% extends 'base.html.twig' %}

{% block title %}Address index{% endblock %}

{% block body %}
    <h1>Address index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>StreetNumber</th>
                <th>StreetNumberExtension</th>
                <th>StreetType</th>
                <th>StreetName</th>
                <th>Complement</th>
                <th>Postalcode</th>
                <th>City</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for address in addresses %}
            <tr>
                <td>{{ address.id }}</td>
                <td>{{ address.name }}</td>
                <td>{{ address.streetNumber }}</td>
                <td>{{ address.streetNumberExtension }}</td>
                <td>{{ address.streetType }}</td>
                <td>{{ address.streetName }}</td>
                <td>{{ address.complement }}</td>
                <td>{{ address.postalcode }}</td>
                <td>{{ address.city }}</td>
                <td>{{ address.createdAt ? address.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('address_show', {'id': address.id}) }}">show</a>
                    <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('address_new') }}">Create new</a>
{% endblock %}
