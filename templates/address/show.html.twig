{% extends 'base.html.twig' %}

{% block title %}Address{% endblock %}

{% block body %}
    <h1>Address</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ address.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ address.name }}</td>
            </tr>
            <tr>
                <th>StreetNumber</th>
                <td>{{ address.streetNumber }}</td>
            </tr>
            <tr>
                <th>StreetNumberExtension</th>
                <td>{{ address.streetNumberExtension }}</td>
            </tr>
            <tr>
                <th>StreetType</th>
                <td>{{ address.streetType }}</td>
            </tr>
            <tr>
                <th>StreetName</th>
                <td>{{ address.streetName }}</td>
            </tr>
            <tr>
                <th>Complement</th>
                <td>{{ address.complement }}</td>
            </tr>
            <tr>
                <th>Postalcode</th>
                <td>{{ address.postalcode }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ address.city }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ address.createdAt ? address.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('address_index') }}">back to list</a>

    <a href="{{ path('address_edit', {'id': address.id}) }}">edit</a>

    {{ include('address/_delete_form.html.twig') }}
{% endblock %}
