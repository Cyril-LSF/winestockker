{# {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }} #}
<div class="min-vh-100" style="background-color: #f2e8cf;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                {% if update is defined %}
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Modifier une bouteille</p>
                {% else %}
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Créer une bouteille</p>
                {% endif %}

                {{ form_start(form, {'attr': {'class': 'mx-1 mx-md-4'}}) }}
                <!-- Name -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fa-solid fa-signature fa-lg me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{ form_widget(form.name) }}
                    </div>
                  </div>
                    {% for errorItem in form.name.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="name-error mb-4"></p>
                <!-- Endtname -->
                <!-- Year -->
                    <div class="d-flex flex-row align-items-center">
                        <i class="fa-solid fa-calendar fa-lg me-3"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(form.year) }}
                        </div>
                    </div>
                    {% for errorItem in form.year.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="year-error mb-4"></p>
                <!-- End year -->
                <!-- Origin -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fa-solid fa-flag fa-lg me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_widget(form.origin) }}
                    </div>
                  </div>
                    {% for errorItem in form.origin.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="origin-error mb-4"></p>
                <!-- End origin -->
                <!-- Vine -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fa-solid fa-seedling fa-lg me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_widget(form.vine) }}
                    </div>
                  </div>
                    {% for errorItem in form.vine.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="vine-error mb-4"></p>
                <!-- End vine -->
                <!-- Enbottler -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fa-solid fa-wine-bottle fa-lg me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_widget(form.enbottler) }}
                    </div>
                  </div>
                    {% for errorItem in form.enbottler.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="enbottler-error mb-4"></p>
                <!-- End enbottler -->
                <!-- Price -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fa-solid fa-coins fa-lg me-3"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_widget(form.price) }}
                    </div>
                  </div>
                    {% for errorItem in form.price.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="price-error mb-4"></p>
                <!-- End price -->
                {# <!-- Picture -->
                  {% if form.picture is defined %}
                    <div class="d-flex justify-content-center align-items-center mb-4">
                      {% if user.picture is null %}
                        <img class="w-50 form-control" src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="Photo de profil">
                      {% else %}
                        <img class="w-50 form-control" src={{ asset('upload/' ~ user.picture) }} alt="Photo de profil">
                      {% endif %}
                    </div>
                    <div class="d-flex flex-row align-items-center">
                        <i class="fa-solid fa-image fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(form.picture) }}
                        </div>
                    </div>
                    {% for errorItem in form.picture.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="picture-error mb-4"></p>
                  {% endif %}
                <!-- End picture --> #}
                  <div class="d-flex justify-content-center">
                    {% if update is defined %}
                      <button type="submit" class="btn btn-dark btn-lg" value="submit">Modifier</button>
                    {% else %}
                      <button type="submit" class="btn btn-dark btn-lg" value="submit">Créer</button>
                    {% endif %}
                  </div>

                {{ form_end(form) }}

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src={{ asset('images/bottle.png') }}
                  class="img-fluid" alt="Bouteille de vin se versant dans un verre">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>