{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {# {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Register</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.password, {
            label: 'Password'
        }) }}
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }} #}
<div class="min-vh-100" style="background-color: #f2e8cf;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Inscription</p>
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {# <form class="mx-1 mx-md-4"> #}
                {{ form_start(registrationForm, {'attr': {'class': 'mx-1 mx-md-4'}}) }}
                <!-- Firstname -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{ form_widget(registrationForm.firstname) }}
                      {# {{ form_label(registrationForm.firstname) }} #}
                      {# {% for errorItem in registrationForm.firstname.vars.errors %}
                            <div class="text-danger">{{ errorItem.message }}</div>
                        {% endfor %}
                        <p class="firstname-error"></p> #}
                    </div>
                  </div>
                    {% for errorItem in registrationForm.firstname.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="firstname-error mb-4"></p>
                <!-- End firstname -->
                <!-- Lastname -->
                    <div class="d-flex flex-row align-items-center">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(registrationForm.lastname) }}
                            {# {{ form_label(registrationForm.lastname) }} #}
                            {# {% for errorItem in registrationForm.lastname.vars.errors %}
                                <div class="text-danger">{{ errorItem.message }}</div>
                            {% endfor %}
                            <p class="lastname-error"></p> #}
                        </div>
                    </div>
                    {% for errorItem in registrationForm.lastname.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="lastname-error mb-4"></p>
                <!-- End lastname -->
                <!-- Email -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_widget(registrationForm.email) }}
                        {# {{ form_label(registrationForm.email) }} #}
                        {# {% for errorItem in registrationForm.email.vars.errors %}
                            <div class="text-danger">{{ errorItem.message }}</div>
                        {% endfor %}
                        <p class="email-error"></p> #}
                    </div>
                  </div>
                    {% for errorItem in registrationForm.email.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="email-error mb-4"></p>
                <!-- End email -->
                <!-- Birthday -->
                    <div class="d-flex flex-row align-items-center">
                        {# <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> #}
                        <i class="fa-solid fa-cake-candles fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(registrationForm.birthday) }}
                            {# {{ form_label(registrationForm.birthday) }} #}
                            {# {% for errorItem in registrationForm.birthday.vars.errors %}
                                <div class="text-danger">{{ errorItem.message }}</div>
                            {% endfor %}
                            <p class="birthday-error"></p> #}
                        </div>
                    </div>
                    {% for errorItem in registrationForm.birthday.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="birthday-error mb-4"></p>
                <!-- End birthday -->
                <!-- Password -->
                    <div class="d-flex flex-row align-items-center">
                        <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(registrationForm.password.first) }}
                            {# {{ form_label(registrationForm.password.first) }} #}
                            {# {% for errorItem in registrationForm.password.first.vars.errors %}
                                <div class="text-danger">{{ errorItem.message }}</div>
                            {% endfor %}
                            <p class="password-first-error"></p> #}
                        </div>
                    </div>
                    {% for errorItem in registrationForm.password.first.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="password-first-error mb-4"></p>
                    <div class="d-flex flex-row align-items-center">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(registrationForm.password.second) }}
                            {# {{ form_label(registrationForm.password.second) }} #}
                            {# {% for errorItem in registrationForm.password.second.vars.errors %}
                                <div class="text-danger">{{ errorItem.message }}</div>
                            {% endfor %}
                            <p class="password-second-error"></p> #}
                        </div>
                    </div>
                    {% for errorItem in registrationForm.password.second.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="password-second-error mb-4"></p>
                <!-- End password -->
                <!-- AgreeTerms -->
                  <div class="form-check d-flex justify-content-center mb-3">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <label class="form-check-label" for="form2Example3">
                      J'accepte les <a href="#!">conditions d'utilisation</a>
                    </label>
                    {# {% for errorItem in registrationForm.agreeTerms.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="agreeTerms-error"></p> #}
                  </div>
                    {% for errorItem in registrationForm.agreeTerms.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="agreeTerms-error mb-4"></p>
                <!-- End agreeTerms -->
                  <div class="d-flex justify-content-center">
                    <button type="submit" class="btn btn-dark btn-lg">S'inscrire</button>
                  </div>

                {# </form> #}
                {{ form_end(registrationForm) }}

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src={{ asset('images/bouteille-verre.png') }}
                  class="img-fluid" alt="Bouteille de vin se versant dans un verre">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
