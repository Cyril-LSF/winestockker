<div class="min-vh-100" style="background-color: #f2e8cf;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                {% if update is defined %}
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Modifier mon profil</p>
                {% else %}
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Inscription</p>
                {% endif %}
                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm, {'attr': {'class': 'mx-1 mx-md-4'}}) }}
                <!-- Firstname -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                      {{ form_widget(registrationForm.firstname) }}
                    </div>
                  </div>
                    {% for errorItem in registrationForm.firstname.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="firstname-error mb-4"></p>
                <!-- End firstname -->
                <!-- Lastname -->
                    <div class="d-flex flex-row align-items-center">
                        <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(registrationForm.lastname) }}
                        </div>
                    </div>
                    {% for errorItem in registrationForm.lastname.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="lastname-error mb-4"></p>
                <!-- End lastname -->
                <!-- Email -->
                  <div class="d-flex flex-row align-items-center">
                    <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                    <div class="form-outline flex-fill mb-0">
                        {{ form_widget(registrationForm.email) }}
                    </div>
                  </div>
                    {% for errorItem in registrationForm.email.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="email-error mb-4"></p>
                <!-- End email -->
                <!-- Birthday -->
                  {% if registrationForm.birthday is defined %}
                    <div class="d-flex flex-row align-items-center">
                        {# <i class="fas fa-envelope fa-lg me-3 fa-fw"></i> #}
                        <i class="fa-solid fa-cake-candles fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(registrationForm.birthday) }}
                        </div>
                    </div>
                    {% for errorItem in registrationForm.birthday.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="birthday-error mb-4"></p>
                  {% endif %}
                <!-- End birthday -->
                <!-- Password -->
                  {% if registrationForm.password is defined %}
                    <div class="d-flex flex-row align-items-center">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                          {{ form_widget(registrationForm.password.first) }}
                      </div>
                    </div>
                    {% for errorItem in registrationForm.password.first.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="password-error mb-4"></p>
                    <div class="d-flex flex-row align-items-center">
                        <i class="fas fa-key fa-lg me-3 fa-fw"></i>
                        <div class="form-outline flex-fill mb-0">
                            {{ form_widget(registrationForm.password.second) }}
                        </div>
                    </div>
                    {% for errorItem in registrationForm.password.second.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="confirm-password-error mb-4"></p>
                  {% endif %}
                <!-- End password -->
                <!-- AgreeTerms -->
                {% if registrationForm.agreeTerms is defined %}
                  <div class="form-check d-flex justify-content-center mb-3">
                    {{ form_widget(registrationForm.agreeTerms) }}
                    <label class="form-check-label" for="form2Example3">
                      J'accepte les <a href="#!">conditions d'utilisation</a>
                    </label>
                  </div>
                    {% for errorItem in registrationForm.agreeTerms.vars.errors %}
                        <div class="text-danger">{{ errorItem.message }}</div>
                    {% endfor %}
                    <p class="agreeTerms-error mb-4"></p>
                {% endif %}
                <!-- End agreeTerms -->
                  <div class="d-flex justify-content-center">
                    {% if update is defined %}
                      <button type="submit" class="btn btn-dark btn-lg" value="submit">Modifier</button>
                    {% else %}
                      <button type="submit" class="btn btn-dark btn-lg" value="submit">S'inscrire</button>
                    {% endif %}
                  </div>

                {{ form_end(registrationForm) }}

              </div>
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                <img src={{ asset('images/bouteille-verre.png') }}
                  class="img-fluid" alt="Bouteille de vin se versant dans un verre">

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>