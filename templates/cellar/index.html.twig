{% extends 'base.html.twig' %}

{% block title %}Cellar index{% endblock %}

{% block body %}
<section>
    <div class="container py-2">
        <div class="pagetitle">
            <h1 class="text-start">
                {% if admin is defined %}
                    Les caves
                {% else %}
                    Mes caves
                {% endif %}
            </h1>
        </div>
        <div class="row justify-content-center">
            {% if cellars|length > 0 %}
                {% for cellar in cellars %}
                    {% include 'components/card/card_index.html.twig' with {'entity': cellar, 'type': 'cellar'} %}
                {% endfor %}
            {% else %}
                {{ include('components/no_result/no_result.html.twig') }}
            {% endif %}
        </div>
        <div class="row">
            <div class="col">
                {{ knp_pagination_render(cellars) }}
            </div>
        </div>
    </div>
</section>

{% endblock %}
