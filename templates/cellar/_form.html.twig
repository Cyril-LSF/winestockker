
<div class="container py-5">
    <div class="row d-flex justify-content-center align-items-center min-vh-100 cellar-background">
        <div class="col-sm-12 col-md-6 ">
            {{ form_start(form) }}
                <div class="d-flex flex-column justify-content-center align-items-center bg-light bg-opacity-75 rounded p-4">
                    <!-- Name -->
                    <div class="form-outline mb-4 h5 w-100">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {% for errorItem in form.name.vars.errors %}
                            <div class="text-danger">{{ errorItem.message }}</div>
                        {% endfor %}
                        <p class="name-error mb-4"></p>
                    </div>
                    <!-- End name -->

                    <!-- Submit button -->
                    <div>
                        <button type="submit" value="submit" class="btn btn-dark mb-4">
                          {% if update is defined %}
                            Modifier
                          {% else %}
                            Cr√©er
                          {% endif %}
                        </button>
                    </div>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>



