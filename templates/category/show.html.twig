{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<section class="h-100 gradient-custom">
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">{{ category.name }}</h5>
          </div>
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Créée le
                <span>{{ category.createdAt | date('d/m/Y') }}</span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                Bouteilles
                <span>{{ category.bottles | length }}</span>
              </li>
              <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                
              </li>
            </ul>

            <div class="mt-2 d-flex">
                <a href={{ path('category_edit', {'id': category.id}) }} class="btn btn-link">
                    <i class="fa-solid fa-pen-to-square fa-2x text-secondary"></i>
                </a>
                {{ include('category/_delete_form.html.twig') }}
            </div>
          </div>
          <div>
          </div>
        </div>
        <button type="button" class="btn btn-dark mb-4 w-100" data-toggle="modal" data-target="#bottleModal">
          Ajouter / retirer une bouteille
        </button>
        {% include 'category/bottleModal.html.twig' with {'form': form} %}
      </div>
      <div class="col-md-8">
        <div class="row">
          {% for bottle in category.bottles %}
            <div class="col-lg-5 col-md-12 mb-5">
            <div class="card shadow position-relative">
                <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                    data-mdb-ripple-color="light">
                    <img src={{ asset('images/bottle-top.jpg') }}
                    class="w-100" />
                </div>
                <div class="card-body w-75 m-auto">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <div class="d-flex flex-column align-items-center">
                            <p class="h6 text-muted">Provenance</p>
                            <p class="h6">{{ bottle.origin|country_name }}</p>
                        </div>
                        <hr class="w-100 m-1" style="border: 1px solid grey;">
                        <div class="d-flex flex-column align-items-center">
                            <p class="h6 text-muted">Cépage</p>
                            <p class="h6">{{ bottle.vine }}</p>
                        </div>
                        <hr class="w-100 m-1" style="border: 1px solid grey;">
                        <div class="d-flex flex-column align-items-center">
                            <p class="h6 text-muted">Embouteilleur</p>
                            <p class="h6">{{ bottle.enbottler }}</p>
                        </div>
                        <hr class="w-100 m-1" style="border: 1px solid grey;">
                        <div class="d-flex flex-column align-items-center">
                            <p class="h6 text-muted">Prix</p>
                            <p class="h6">{{ bottle.price ~ ' €' }}</p>
                        </div>
                    </div>
                    <fieldset class="purple-fieldset rounded mt-2 text-center">
                        <legend class="h4 purple mt-1">{{ bottle.name | upper }}</legend>
                        <p class="h6">{{ bottle.year }}</p>
                    </fieldset>
                </div>
            </div>
        </div>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
