{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
<section>
  <div class="container py-2">
    <div class="pagetitle mb-4">
        <h1 class="text-start">Ma catégorie</h1>
    </div>
    <div class="row my-4">
      {% include 'components/card/card.html.twig' with {
        'title': category.name,
        'icon': "fa-solid fa-sitemap fa-lg",
        'type': 'category',
        'entity': category,
        'path': 'category_show',
        'param': category.id,
      } %}
      {% include 'category/bottleModal.html.twig' with {'form': form} %}
      {% include 'components/filter_bar/filter_bar.html.twig' with {'filterForm': filterForm} %}
    </div>
    <div class="row">
      {% if bottles|length > 0 %}
        {% for bottle in bottles %}
          <div class="col-lg-4 col-md-12 mb-3">
            <div class="card shadow position-relative">
              <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light"
                data-mdb-ripple-color="light">
                <img src={{ asset('images/bottle-top-2.jpg') }}
                class="w-100" />
              </div>
              <div class="card-body w-75 m-auto">
                <div class="d-flex flex-column justify-content-center align-items-center">
                    <div class="d-flex flex-column align-items-center">
                        <p class="h6 text-muted">Provenance</p>
                        <p class="h6">{{ bottle.origin|country_name }}</p>
                    </div>
                    <hr class="w-100 m-1" style="border: 1px solid grey;">
                    <div class="d-flex flex-column align-items-center">
                        <p class="h6 text-muted">Cépage</p>
                        <p class="h6">{{ bottle.vine }}</p>
                    </div>
                    <hr class="w-100 m-1" style="border: 1px solid grey;">
                    <div class="d-flex flex-column align-items-center">
                        <p class="h6 text-muted">Embouteilleur</p>
                        <p class="h6">{{ bottle.enbottler }}</p>
                    </div>
                    <hr class="w-100 m-1" style="border: 1px solid grey;">
                    <div class="d-flex flex-column align-items-center">
                        <p class="h6 text-muted">Prix</p>
                        <p class="h6">{{ bottle.price ~ ' €' }}</p>
                    </div>
                </div>
                <fieldset class="purple-fieldset rounded mt-2 text-center">
                    <legend class="h4 purple mt-1">{{ bottle.name | upper }}</legend>
                    <p class="h6">{{ bottle.year }}</p>
                </fieldset>
              </div>
            </div>
          </div>
        {% endfor %}
      {% else %}
        {{ include('components/no_result/no_result.html.twig') }}
      {% endif %}
    </div>
  </div>
</section>
{% endblock %}
